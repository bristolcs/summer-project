/* Authorization prompt */

.loginInfo {
    display: flex;
    align-items: center;
    height: 200rpx;
  }
  
  /* avatar */
  
  .loginInfo-avatar {
    width: 140rpx;
    height: 140rpx;
    margin-left: 48rpx;
    border-radius: 20rpx;
    background: #f5f7f7;
  } 

  /* Handling text overflow */
  .note2_item {
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .note_item {
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
  }