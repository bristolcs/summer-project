/* Rotation effect */
swiper {
  position: relative;
  height: 460rpx;
  background: #fff;
  box-shadow: 0px 22px 50px -24px rgba(0, 0, 0, 0.1);
}

swiper image {
  display: block;
  width: 100%;
  height: 300rpx;
}

.swiper-desc {
  height: 160rpx;
  padding: 0 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 130rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

/* Recommended specials */
.selected-nav {
  border-bottom: 16rpx solid #f5f7f7;
}

.selected-nav-list {
  display: flex;
  padding: 0 24rpx 40rpx;
  background: #fff;
  justify-content: space-between;
}

.selected-nav-item {
  margin-right: 16rpx;
  text-align: center;
}

.selected-nav-item image {
  width: 156rpx;
  height: 156rpx;
  border-radius: 6rpx;
  background: #f5f7f7;
}

.selected-nav-item text {
  line-height: 26rpx;
  font-size: 26rpx;
  color: #333;
}

/* title */
.common-subtitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 130rpx;
  padding: 0 24rpx;
  background: #fff;
}

.common-subtitle-left {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.common-subtitle-right {
  font-size: 26rpx;
  font-weight: 400;
  color: #959595;
  margin-right: 6rpx;
}
.box {  
  margin: 20rpx 0; 
}

.box view.cu-bar {
  margin-top: 20rpx; 
}



